<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".EditingActivity">

    <TextView
        android:id="@+id/LastModified"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:color="#0000"
        android:editable="false"
        android:gravity="center_vertical"
        android:text="000/00000/00000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/creationDateLabel"
        app:layout_constraintTop_toBottomOf="@+id/creationDate" />

    <TextView
        android:id="@+id/LastModifiedLabel"
        android:layout_width="108dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:text="last modified:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creationDateLabel" />

    <TextView
        android:id="@+id/creationDateLabel"
        android:layout_width="108dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:text="creation date:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/creationDate"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:color="#0000"
        android:editable="false"
        android:gravity="center_vertical"
        android:text="000/00000/00000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/creationDateLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/status_checkbox"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="-----"
        app:layout_constraintEnd_toStartOf="@+id/status_TextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LastModifiedLabel" />

    <TextView
        android:id="@+id/status_TextView"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="302dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:color="#0000"
        android:editable="false"
        android:gravity="center_vertical"
        android:text="000/00000/00000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/creationDateLabel"
        app:layout_constraintTop_toBottomOf="@+id/LastModified" />

    <EditText
        android:id="@+id/Edit_Task"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="84dp"
        android:background="@color/cardview_shadow_start_color"
        android:ems="10"
        android:gravity="start|top"
        android:hint=""
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_TextView"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>